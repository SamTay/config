shortcut-default go
shortcut-add gi=https://github.com/search?q=$0
shortcut-add go=https://encrypted.google.com/search?q=$0
shortcut-add ho=http://www.haskell.org/hoogle/?hoogle=$0
shortcut-add ro=http://www.rottentomatoes.com/search/?search=$0
shortcut-add yt=https://www.youtube.com/results?search_query=$0
shortcut-add am=https://www.amazon.com/s/?url=search-alias%3Daps&field-keywords=$0

set webinspector=true

set editor-command='termite --exec vim %s'

